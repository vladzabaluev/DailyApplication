@page "/groups"
@using System.Security.Claims
@inject DailyApplication.Controllers.GroupsController _groupsController;

<div class="form-group">
    <label class="control-label">Название</label>
    <input class="form-control" placeholder="Название" @bind=groupName />
    <span class="text-danger"></span>
</div>
<div class="form-group">
    <label class="control-label">Описание</label>
    <input type="textarea" class="form-control" placeholder="Описание" @bind=groupDescription />
    <span class="text-danger"></span>
</div>

<button @onclick=Create>Создать группу</button>

<h1 class="display-3 my-2">Доступные группы:</h1>

<div>
    @foreach (var group in groups)
    {
        <div class="alert alert-info" role="alert">
            <h4 class="alert-heading">@group.Id. @group.Name</h4>
            <hr />
            <p>@group.Description</p>
        </div>
    }
</div>

@code {
    private string groupName;
    private string groupDescription;
    [CascadingParameter]
    private Task<AuthenticationState> authenticationStateTask { get; set; }

    private async void Create()
    {
        AuthenticationState currentAuth = await authenticationStateTask;
        ClaimsPrincipal currentUser = currentAuth.User;

        Group newGroup = new Group()
        {
            Name = groupName,
            Description = groupDescription,
        };
        await _groupsController.Create(newGroup, currentUser);

        groups.Add(newGroup);

    }

    [CascadingParameter]
    protected List<Group> groups { get; set; }
}