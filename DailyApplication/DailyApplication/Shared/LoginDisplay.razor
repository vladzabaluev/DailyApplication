<AuthorizeView>
    <Authorized>
    <ul class="navbar-nav">
        <li class="nav-item">
            <NavLink class="nav-link text-dark" href="Identity/Account/Manage">
                Привет, @context.User.Identity.Name!
            </NavLink>
        </li>
        <li class="nav-item">
            <form method="post" action="Identity/Account/Logout">
                <button type="submit" class="nav-link btn btn-link text-dark">Выйти</button>
            </form>
        </li>
        
    </ul>
    </Authorized>
    <NotAuthorized>
        <ul class="navbar-nav">
            <li class="nav-item">
                <NavLink class="nav-link text-dark" href="Identity/Account/Register">
                    Регистрация
                </NavLink>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link text-dark" href="Identity/Account/Login">
                    Войти
                </NavLink>
            </li>
        </ul>
    </NotAuthorized>
</AuthorizeView>