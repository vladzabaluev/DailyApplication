<input @bind="@ChangeSub" class="alert alert-secondary" role="alert" />

@code {
    [Parameter]
    public List<string> SubEvents { get; set; }

    [Parameter]
    public int Index { get; set; }

    [Parameter]
    public EventCallback<List<string>> CallBack { get; set; }

    private string ChangeSub
    {
        get => SubEvents[Index];
        set
        {
            SubEvents[Index] = value;
            CallBack.InvokeAsync(SubEvents);
        }

    }
}
