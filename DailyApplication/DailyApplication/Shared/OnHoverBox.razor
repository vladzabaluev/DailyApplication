<div class="@OnHoverClass" style="height: auto;max-height: 1000px; ">
    @ChildContent
</div>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }
    
    [Parameter]
    public bool collapseHover { get; set; }

    #nullable enable
    private string? OnHoverClass => collapseHover ? "collapse" : null;
}
