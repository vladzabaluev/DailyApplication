<div class="modal mt-5" tabindex="-1" role="dialog" style="display:@Display;" @onclick=Toggle>
    <div class="modal-dialog" role="document" @onclick:stopPropagation>
        <div class="modal-content" style="min-width:600px;">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick=Toggle>
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @ChildContent
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" @onclick=Toggle>Save changes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick=Toggle>Close</button>
            </div>
        </div>
    </div>
</div>


@if (ShowBackDrop)
{
    <div class="modal-backdrop fade show"></div>
}


@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public bool Collapse { get; set; }

    [Parameter]
    public EventCallback Toggle { get; set; }

    //private bool ShowBackDrop = false;

    #nullable enable
    private string? Display => Collapse ? "flex" : "none";
    private bool ShowBackDrop => Collapse ? true : false;

}